#!/bin/bash
DIR="HOME HOME/conf HOME/bin HOME/lib HOME/log"
PKG="oss-tool"

for d in $DIR
do
	if [ ! -d $HOME/$d ]; then
		mkdir $HOME/$d
	fi
done

# link essential tools
TOOL="dismc startmc stopmc"
for t in $TOOL
do
	echo "Link $t"
	rm -f $HOME/HOME/bin/$t
	ln -s $HOME/$PKG/script/$t $HOME/HOME/bin/$t
done

PROC_CONF=$HOME/HOME/conf/proc.json
if [ ! -f $PROC_CONF ]; then
	echo "Copy default proc.json file"
	cp $HOME/$PKG/script/proc.json $PROC_CONF
fi

# update PATH in .bashrc
CNT=`grep HOME/bin ~/.bashrc | grep PATH `
if [[ $CNT == "" ]]; then
	echo "Update PATH"
	echo 'export PATH=$HOME/HOME/bin:$PATH' >> ~/.bashrc
	. ~/.bashrc
fi
